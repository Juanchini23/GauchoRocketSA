CREATE DATABASE IF NOT EXISTS GauchoRocketSA;

USE GauchoRocketSA;

select * from usuario;
select * from rol;


CREATE TABLE rol
(
    id          smallint not null primary key,
    descripcion varchar(20)
);


insert into rol(id, descripcion)
values (1, "Admin"),
       (2, "Cliente");




CREATE TABLE usuario
(
    id       integer not null auto_increment primary key,
    idRol    smallint,
    nombre   varchar(20),
    apellido varchar(20),
    mail     varchar(30),
    clave    varchar(50),
    codigoViajero int not null,
    foreign key (idRol) references rol (id)
);

CREATE TABLE vuelo(
    id int primary key auto_increment not null,
    dia varchar(25),
    duracion int,
    codigo varchar(50),
    origen varchar(50),
    destino varchar(50)
);



insert into usuario(idRol, nombre, apellido, mail, clave)
values (2, "a", "Programer", "adminpro@gmail.com", "a");

insert into usuario(idRol, nombre, apellido, mail, clave)
values (1, "Administrador", "Programer", "adminpro@gmail.com", "admin1234");




/* Para saber que rol tiene alguien */

select nombre, rol, mail
from usuario
WHERE rol = 1 OR rol = 'cliente';